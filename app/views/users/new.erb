<div class="row">
  <div class="col-md-3 mx-auto">
    <h1>Sign Up</h1>

    <form class="form-control-group mb-3" method="POST" action="/users">
      <input class="form-control mb-1" type="text" name="username" placeholder="User Name">
      <input class="form-control mb-1" type="email" name="email" placeholder="Email">
      <input class="form-control mb-1" type="password" name="password" placeholder="Password">
      <input class="btn btn-primary" type="submit" value="Sign Up">
    </form>

    <p>Already have an account? <a href="/users/login">Log in</a>.</p>
  </div>
</div>