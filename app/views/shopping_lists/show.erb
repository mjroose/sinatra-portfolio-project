<div class="row">
  <div class="col">
    <h1><%= @shopping_list.name %></h1>
  </div>
</div>

<div class="row">
  <div class="col-3">
    <button onclick="window.location='/shopping_lists/<%= @shopping_list.id %>/edit'" class="btn btn-light">Edit List</button>
  </div>
  <div class="col-3">
    <form method="POST" action="/shopping_lists/<%= @shopping_list.id %>" class="float-right">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" class="btn btn-danger" value="Delete List">
    </form>
  </div>
</div>

<div class="row mt-3">
  <div class="col">
    <h3>Recipes</h3>
    <p class="ml-3"><%= @shopping_list.recipe_list %></p>
  </div>
</div>

<div class="row">
  <div class="col-6">
    <h3>Foods</h3>
    <ul class="list-group list-group-flush ml-3">
      <% @shopping_list.foods.each do |food| %>
        <li class="list-group-item"><%= food.name %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row mt-3">
  <div class="col">
    <button onclick="window.location='/shopping_lists'" class="btn btn-light">Back to Lists</button>
  </div>
</div>
