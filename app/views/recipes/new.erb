<h1>New Recipe</h1>

<form method="POST" action="/recipes">
  <div class="row">
    <div class="col-6 ml-3">
      <input type="text" class="form-control form-control-lg" 
              name="recipe[name]" 
              placeholder="Recipe Name"
      >
    </div>
  </div>

  <div class="row mt-3">
    <div class="col">
      <h3>Ingredients</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-6 ml-3">
      <table class="table table-sm table-borderless">
        <thead>
          <tr>
            <th style="width: 70%">Ingredient</th>
            <th style="width: 10%">Quantity</th>
            <th style="width: 20%">Unit</th>
          </tr>
        </thead>
        <tbody>
          <% 10.times do %>
            <tr>
              <td>
                <input type="text" class="form-control" name="ingredients[][food][name]">
              </td>
              <td>
                <input type="number" class="form-control" name="ingredients[][quantity]">
              </td>
              <td>
                <input type="text" class="form-control" name="ingredients[][unit]">
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h3>Instructions</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-6 ml-3">
      <table class="table table-sm table-borderless">
        <tbody>
          <% 10.times do |i| %>
            <tr>
              <td style="width: 10%">
                <label for="instruction_<%= i %>"><%= i + 1 %>. </label>
              </td>
              <td style="width: 90%">
                <input type="text" class="form-control" name="instructions[][content]" id="instruction_<%= i %>">
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <input type="submit" value="Add Recipe">
</form>